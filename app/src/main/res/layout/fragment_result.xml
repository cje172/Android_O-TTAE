<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultFragment">

    <!--아이디 필요해서 임의로 만든것-->
    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/result_fashion" />

            <TextView
                android:id="@+id/friendItem"
                android:layout_width="200dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/cafe24_ohsquareair"
                android:text="님을 위해\n패션아이템 어때?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="34dp"
                android:background="@drawable/result_fashion1"
                android:orientation="vertical">

                <View
                    android:id="@+id/resultItem_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/result_item_bg"
                    android:backgroundTint="#802E2D2D" />

            </LinearLayout>

            <TextView
                android:id="@+id/resultBrand"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/inter_bold"
                android:text="원더비지터는 “재미있는 제품이 재미있는 삶을 만든다”는 모토의 그래픽을 기반으로 하는 그래픽 패션 레이블이다. 3명의 아트를 전공한 친구들이 함께 브랜드를 론칭했다. 80년대의 서브컬처 만화풍을 컨셉으로한 디자인을 주로 선보인다."
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/price"
                android:layout_width="173dp"
                android:layout_height="30dp"
                android:text="12,000"
                android:textColor="@color/black" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="303dp"
                android:layout_height="112dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="28dp">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="173dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="132dp"
                    android:layout_marginTop="12dp"
                    android:text="WONDER VISITOR 볼캡"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/coverImg"
                    android:layout_width="114dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/gift_category_light_gift_btn_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.084"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/result_moreInfo"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="28dp"
                android:background="#FC3031"
                android:fontFamily="@font/inter_light"
                android:gravity="center_horizontal|center_vertical"
                android:text="선물정보가 더 궁금하다면?"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/result_all"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="#80F3E61E"
                android:fontFamily="@font/inter_bold"
                android:gravity="center_horizontal|center_vertical"
                android:text="모든 결과 유형 보기" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>