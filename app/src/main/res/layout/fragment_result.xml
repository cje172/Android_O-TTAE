<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultFragment">

    <!--아이디 필요해서 임의로 만든것-->
    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/result_img"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/result_battery1" />

            <TextView
                android:id="@+id/friendItem"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/cafe24_ohsquareair"
                android:text="님을 위해\n패션아이템 어때?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="34dp"

                android:orientation="vertical">

                <View
                    android:id="@+id/resultItem_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/result_item_bg"
                    android:backgroundTint="#802E2D2D" />

            </LinearLayout>

            <TextView
                android:id="@+id/resultBrand"
                android:layout_width="299dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintStart_toStartOf="parent" />
             <!--   android:text="원더비지터는 “재미있는 제품이 재미있는 삶을 만든다”는 모토의 그래픽을 기반으로 하는 그래픽 패션 레이블이다. 3명의 아트를 전공한 친구들이 함께 브랜드를 론칭했다. 80년대의 서브컬처 만화풍을 컨셉으로한 디자인을 주로 선보인다."-->


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="303dp"
                android:layout_height="112dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="28dp">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="173dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="132dp"
                    android:layout_marginTop="12dp"
                    android:text="WONDER VISITOR 볼캡"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/coverImg"
                    android:layout_width="114dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="4dp"

                    android:background="@drawable/wonder_visitor_ball_cap"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.084"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="173dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:text="12,000"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toEndOf="@+id/coverImg"
                    app:layout_constraintTop_toTopOf="@+id/productName"
                    app:layout_constraintVertical_bias="0.869" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--            <TextView-->
<!--                android:id="@+id/result_all"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="50dp"-->
<!--                android:background="#80F3E61E"-->
<!--                android:fontFamily="@font/inter_bold"-->
<!--                android:layout_marginLeft="31dp"-->
<!--                android:layout_marginTop="15dp"-->
<!--                android:gravity="center_horizontal|center_vertical"-->
<!--                android:text="모든 결과 유형 보기"-->

<!--                />-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/result_moreInfo"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:background="#FC3031"
                    android:fontFamily="@font/inter_light"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="선물정보가 더 궁금하다면?"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TextContrastCheck" />

                <ImageButton
                    android:id="@+id/again_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"

                    android:src="@drawable/again_button_img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toRightOf="@+id/save_result_button"
                    app:layout_constraintStart_toEndOf="@+id/save_result_button"
                    app:layout_constraintTop_toBottomOf="@+id/result_moreInfo" />

                <ImageButton
                    android:id="@+id/save_result_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="clip_vertical|center_vertical"
                    android:src="@drawable/save_result_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.006"
                    app:layout_constraintStart_toEndOf="@+id/all_button"
                    app:layout_constraintTop_toBottomOf="@+id/result_moreInfo"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageButton
                    android:id="@+id/all_button"
                    android:layout_width="180dp"
                    android:layout_height="50dp"

                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="168dp"
                    android:src="@drawable/all_button_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/result_moreInfo"
                    app:layout_constraintTop_toBottomOf="@+id/result_moreInfo"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>