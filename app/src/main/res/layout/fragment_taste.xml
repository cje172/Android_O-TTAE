<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 뷰 -->
    <View
        android:id="@+id/taste_top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/yellow_COR2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taste_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="66dp"
        android:gravity="top"
        android:lineHeight="24dp"
        android:lineSpacingExtra="0sp"
        android:text="취향저격 선물을 준비하시나요?"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/taste_sub_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taste_sub_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="58dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center_vertical"
        android:lineHeight="14.52dp"
        android:text="받는 분에게 질문 링크를 보내고 취향을 파악해보세요."
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/taste_question_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taste_title_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/taste_question_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/gift_and_taste_move_btn_shape"
        android:drawableLeft="@drawable/taste_btn_icon_custom"
        android:drawablePadding="16dp"
        android:foreground="?selectableItemBackground"
        android:includeFontPadding="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="16dp"
        android:paddingBottom="5dp"
        android:stateListAnimator="@null"
        android:text="취향 질문지 링크보내기 → "
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/taste_top_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taste_sub_title_tv" />

    <View
        android:id="@+id/taste_middle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/taste_bottom_view"
        app:layout_constraintTop_toBottomOf="@+id/taste_top_view" />

    <TextView
        android:id="@+id/taste_sub_logo_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="168dp"
        android:fontFamily="@font/cafe24_ohsquareair"
        android:text="이거 어때?"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/taste_middle_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/taste_middle_view" />

    <!-- 카테고리별 버튼 -->
    <View
        android:id="@+id/taste_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/taste_background_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taste_sub_logo_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/taste_category_trend_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10.45dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/taste_category_btn_shape"
        android:drawableLeft="@drawable/taste_category_trend_btn_icon_custom"
        android:drawablePadding="14dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:stateListAnimator="@null"
        android:text="요즘취향"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/taste_category_home_btn"
        app:layout_constraintEnd_toStartOf="@+id/taste_category_perfume_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/taste_bottom_view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/taste_category_perfume_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10.45dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/taste_category_btn_shape"
        android:drawableLeft="@drawable/taste_category_perfume_btn_icon_custom"
        android:drawablePadding="14dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:stateListAnimator="@null"
        android:text="향기취향"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/taste_category_food_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/taste_category_trend_btn"
        app:layout_constraintTop_toTopOf="@+id/taste_bottom_view" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/taste_category_home_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10.45dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/taste_category_btn_shape"
        android:drawableLeft="@drawable/taste_category_home_btn_icon_custom"
        android:drawablePadding="14dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:stateListAnimator="@null"
        android:text="집콕취향"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/taste_bottom_view"
        app:layout_constraintEnd_toStartOf="@+id/taste_category_food_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taste_category_trend_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/taste_category_food_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10.45dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/taste_category_btn_shape"
        android:drawableLeft="@drawable/taste_category_food_btn_icon_custom"
        android:drawablePadding="14dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:stateListAnimator="@null"
        android:text="맛집취향"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/taste_bottom_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/taste_category_home_btn"
        app:layout_constraintTop_toBottomOf="@+id/taste_category_perfume_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>