<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="11dp">

    <ImageView
        android:id="@+id/item_product_img_iv"
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:scaleType="centerCrop"
        android:src="@drawable/product_list_film_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_company_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:text="회사 이름"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/item_product_img_iv"
        app:layout_constraintTop_toTopOf="@id/item_product_img_iv" />

    <TextView
        android:id="@+id/item_product_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="3dp"
        android:text="제품 이름"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/item_product_img_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_company_tv" />

    <TextView
        android:id="@+id/item_product_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="3dp"
        android:text="가격"
        android:textSize="10sp"
        android:fontFamily="@font/inter_extra_bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/item_product_img_iv"
        app:layout_constraintTop_toBottomOf="@+id/item_product_name_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>