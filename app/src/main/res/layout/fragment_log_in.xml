<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".LogInFragment">

    <!-- 어때?! -->

    <!--
    Font family: Cafe24 Ohsquare
    Line height: 35sp
    -->
    <!-- styles.xml -->

    <View
        android:id="@+id/logIn_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg_r" />

    <View
        android:id="@+id/logIn_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg_b" />

    <TextView
        android:layout_width="248sp"
        android:layout_height="35sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/cafe24_ohsquare"
        android:gravity="center_horizontal|center_vertical"
        android:text="어때?!"
        android:textColor="#FFFFFF"
        android:textFontWeight="700"
        android:textSize="30sp"
        app:lineHeight="35.4sp" />

    <LinearLayout
        android:id="@+id/Group21"
        android:layout_width="290dp"
        android:layout_height="83dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="306dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logIn_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_light"
            android:text="이메일을 입력해주세요"
            android:textColor="#B2FFFFFF"
            android:textSize="15sp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#B2FFFFFF" />

        <TextView
            android:id="@+id/logIn_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/inter_light"
            android:text="비밀번호를 입력해주세요"
            android:textColor="#B2FFFFFF"
            android:textSize="15sp" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#B2FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/logIn_wrong"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/Group21"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="254dp"
        android:fontFamily="@font/inter_light"
        android:text="아이디와 비밀번호가 일치하지 않습니다."
        android:textColor="#FF0000"
        android:textSize="12sp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/Group13"
        android:layout_width="301dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="156dp"
        android:background="#FC3031"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logIn_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_semi_bold"
            android:text="로그인하기"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_light"
            android:text="  회원가입"
            android:textColor="#80FFFFFF"
            android:textSize="15sp" />

        <View
            android:id="@+id/view5"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#80FFFFFF" />

        <TextView
            android:id="@+id/findPassword"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/inter_light"
            android:text="비밀번호찾기"
            android:textColor="#80FFFFFF"
            android:textSize="15sp" />

        <View
            android:id="@+id/view6"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#80FFFFFF" />

        <TextView
            android:id="@+id/registerAsk"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_light"
            android:text=" 로그인 문의"
            android:textColor="#80FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <!--
Font family: Cafe24 Ohsquare
-->


</RelativeLayout>