<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_img"
    tools:context=".LoginPageActivity">

    <View
        android:id="@+id/login_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg_r_img" />

    <View
        android:id="@+id/login_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg_b_img" />

    <TextView
        android:layout_width="248dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/cafe24_ohsquare"
        android:gravity="center_horizontal|center_vertical"
        android:text="어때?!"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="30sp"
        app:lineHeight="35.4sp" />

    <LinearLayout
        android:id="@+id/login_et_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="140dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_id_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B2FFFFFF"
            android:fontFamily="@font/inter_light"
            android:hint="이메일을 입력해주세요"
            android:inputType="textEmailAddress"
            android:lastBaselineToBottomHeight="20dp"
            android:maxLines="1"
            android:textColor="#B2FFFFFF"
            android:textColorHint="#B2FFFFFF"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/login_not_ex_email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:text="존재하지 않는 이메일입니다."
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14dp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:backgroundTint="#B2FFFFFF"
            android:fontFamily="@font/inter_light"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:lastBaselineToBottomHeight="20dp"
            android:maxLines="1"
            android:textColor="#B2FFFFFF"
            android:textColorHint="#B2FFFFFF"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/login_mismatch_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/inter_medium"
            android:text="이메일과 비밀번호가 일치하지 않습니다."
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12dp"
            android:visibility="invisible" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="505dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="107dp"
        android:background="@color/red_COR1"
        android:fontFamily="@font/inter_medium"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:minHeight="0dp"
        android:paddingVertical="12.48dp"
        android:text="로그인하기"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/login_other_btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="557dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_to_reg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:paddingStart="36dp"
            android:paddingEnd="18dp"
            android:text="회원가입"
            android:textColor="#80FFFFFF"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:id="@+id/login_line_view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="22dp"
            android:background="#80FFFFFF" />

        <Button
            android:id="@+id/login_find_pwd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:paddingHorizontal="18dp"
            android:text="비밀번호 찾기"
            android:textColor="#80FFFFFF"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <View
            android:id="@+id/login_line_view2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="22dp"
            android:background="#80FFFFFF" />

        <Button
            android:id="@+id/login_reg_ask_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:paddingStart="18dp"
            android:paddingEnd="36dp"
            android:text=" 로그인 문의"
            android:textColor="#80FFFFFF"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</RelativeLayout>