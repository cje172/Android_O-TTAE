<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/question_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="34dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/question_back_btn_custom"
        android:drawablePadding="8dp"
        android:includeFontPadding="false"
        android:minWidth="54dp"
        android:minHeight="18dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp"
        android:stateListAnimator="@null"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="#D9D9D9"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="34dp"
        android:text="1/5"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_back_btn" />

    <SeekBar
        android:id="@+id/question_progress_sb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="34dp"
        android:background="@null"
        android:max="100"
        android:minHeight="4dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progress="0"
        android:progressTint="@color/black"
        android:thumb="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_progress_tv" />

    <TextView
        android:id="@+id/question_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/cafe24_ohsquareair"
        android:text="MBTI에 대한 질문입니다?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#6C6C6C"
        app:layout_constraintBottom_toTopOf="@+id/question_answer_top_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_progress_sb" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/question_answer_top_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="34dp"
        android:layout_marginTop="126dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/question_answer_btn_shape"
        android:backgroundTint="@color/yellow_COR2"
        android:fontFamily="@font/inter_medium"
        android:foreground="?selectableItemBackground"
        android:includeFontPadding="false"
        android:paddingTop="15.22dp"
        android:paddingBottom="15.22dp"
        android:text="I 입니다. (답변A입니다.)"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/question_answer_bottom_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/question_answer_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="34dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/question_answer_btn_shape"
        android:backgroundTint="@color/yellow_COR2"
        android:fontFamily="@font/inter_medium"
        android:foreground="?selectableItemBackground"
        android:includeFontPadding="false"
        android:paddingTop="15.22dp"
        android:paddingBottom="15.22dp"
        android:text="E 입니다. (답변B입니다.)"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>