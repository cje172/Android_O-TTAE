<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.O_ttae" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#a8a8a8</item>
        <!-- Customize your theme here. -->

        <!-- Font Custom -->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>

        <item name="android:background">@android:color/transparent</item>

    </style>


    <!-- Home 화면 - Bottom Navigation Custom -->
    <style name="NavDrawerTextStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">8sp</item>
    </style>

    <!-- Home 화면 - 카테고리 TabLayout Custom   -->
    <style name="HomeCategoryTabLayout_Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="paddingEnd">0dp</item>
        <item name="itemTextAppearanceInactive">@font/inter_regular</item>
        <item name="itemTextAppearanceActive">@font/inter_bold</item>
        <item name="marginHorizontal">0dp</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#D9D9D9</item>
    </style>

    <!-- 상품 리스트 화면 - 가격대 TabLayout Custom -->
    <style name="ProductPriceChipTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabBackground">@drawable/product_price_tab_selector</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash</item>
    </style>

    <!--my Fragment-->
    <style name="some_id">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Font Style -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

</resources>